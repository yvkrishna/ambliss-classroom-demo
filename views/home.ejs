    <script>
        function get_link(){
            axios({
                method: 'get',
                url: 'http://localhost:4080/get_meet_link'
              })
              .then((response) => {
                  var html_modal = `
                  <div class="alert alert-info" role="alert">
                    Meeting Link :<br> <a href="http://localhost:4080/meeting/${response.data.m_l}" class="alert-link"><span id="generated_link">${response.data.m_l}</span></a>
                  </div>
                  `
                document.getElementById("modal_body").innerHTML = html_modal;
              }, (error) => {
                var html_modal = `
                <div class="alert alert-warning" role="alert">
                  Meeting Link :<br> <b>Sorry There might be something wrong in the server. <br> PLease Try Again.</b>
                </div>
                `
                document.getElementById("modal_body").innerHTML = html_modal
                console.log(error);
              });
        }
    </script>

